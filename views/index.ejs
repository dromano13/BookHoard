<!DOCTYPE html>
<html>
    <body>
        <h1>Welcome to the Hoard</h1>
        <nav>
            <a href="/books/new"> Add a New Book to the Hoard!</a>
        </nav>
        <ul>
            <% for(let i=0; i<books.length; i++) { %>
                <li>
                    <a href="/books/<%=books[i].id%>"> <%=books[i].title%> </a>
                </li>
                <form action="/books/<%=books[i].id%>?_method=DELETE" method="POST"> 
                    <input type="submit" value="Delete" />
                </form>
                <a href="/books/<%=books[i].id%>/edit">Edit</a>
                <br></br>
            <% } %>
        </ul>
    </body>
</html>